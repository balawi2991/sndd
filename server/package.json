{
  "name": "sanad-server",
  "version": "1.0.0",
  "description": "Backend server for Sanad (MintChat) with RAG + DeepSeek integration",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "test": "jest",
    "db:setup": "node scripts/setup-database.js",
    "db:seed": "node scripts/seed-demo-data.js",
    "db:index": "node scripts/index-materials.js",
    "db:reset": "node scripts/setup-database.js && node scripts/seed-demo-data.js && node scripts/index-materials.js",
    "db:migrate": "node scripts/migrate-production.js",
    "setup": "npm run db:setup && npm run db:seed && npm run db:index"
  },
  "keywords": [
    "ai",
    "chatbot",
    "rag",
    "deepseek"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express-rate-limit": "^7.1.5",
    "zod": "^3.22.4",
    "pg": "^8.11.3",
    "redis": "^4.6.11",
    "axios": "^1.6.2",
    "openai": "^4.20.1",
    "pdf-parse": "^1.1.1",
    "cheerio": "^1.0.0-rc.12",
    "uuid": "^9.0.1",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "@types/morgan": "^1.9.9",
    "@types/compression": "^1.7.5",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11"
  }
}
